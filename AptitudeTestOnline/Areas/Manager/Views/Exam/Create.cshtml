@model AptitudeTestOnline.Models.ExamModels

@{
    ViewBag.Title = "Create";
}
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Create new exam</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row">
            <label for="ExamName" class="control-label col-md-2">Exam Name</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" placeholder="Enter exam name"
                       id="ExamName" name="ExamName" type="text" value="">
                @Html.ValidationMessageFor(model => model.ExamName, "", new { @class = "text-danger" })
            </div>
            
        </div>

        <div class="form-group row">
            <label for="Description" class="control-label col-md-2">Exam Description</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" placeholder="Enter exam description"
                       id="Description" name="Description" type="text" value="">
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group row">
            <label class="control-label col-md-2">Setup Question</label>
            <div class="col-md-10">
                <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#general-knowledge" role="tab">General Knowledge</a>
                        <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#mathematics" role="tab">Mathematics</a>
                        <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#computer-technology" role="tab">Computer Technology</a>
                    </div>
                </nav>
                <div class="tab-content admin" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="general-knowledge" role="tabpanel" style="margin-top: 20px;">

                        <div class="form-group row">
                            <label for="TypeOfQuestion" class="control-label col-md-2">Question (1)</label>
                            <div class="col-sm-9">
                                <select class="form-control" id="TypeOfQuestion" name="TypeOfQuestion">
                                    <option value="1">What is Html?</option>
                                    <option value="2">Mathematics</option>
                                    <option value="3">Computer Technology</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="TypeOfQuestion" class="control-label col-md-2">Question (2)</label>
                            <div class="col-sm-9">
                                <select class="form-control" id="TypeOfQuestion" name="TypeOfQuestion">
                                    <option value="1">What is CSS?</option>
                                    <option value="2">Mathematics</option>
                                    <option value="3">Computer Technology</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="TypeOfQuestion" class="control-label col-md-2">Question (3)</label>
                            <div class="col-sm-9">
                                <select class="form-control" id="TypeOfQuestion" name="TypeOfQuestion">
                                    <option value="1">What is Javascript?</option>
                                    <option value="2">Mathematics</option>
                                    <option value="3">Computer Technology</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="TypeOfQuestion" class="control-label col-md-2">Question (4)</label>
                            <div class="col-sm-9">
                                <select class="form-control" id="TypeOfQuestion" name="TypeOfQuestion">
                                    <option value="1">What is ASP.NET?</option>
                                    <option value="2">Mathematics</option>
                                    <option value="3">Computer Technology</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="TypeOfQuestion" class="control-label col-md-2">Question (5)</label>
                            <div class="col-sm-9">
                                <select class="form-control" id="TypeOfQuestion" name="TypeOfQuestion">
                                    <option value="1">What is C#?</option>
                                    <option value="2">Mathematics</option>
                                    <option value="3">Computer Technology</option>
                                </select>
                            </div>
                        </div>

                    </div>

                    <div class="tab-pane fade" id="mathematics" role="tabpanel" aria-labelledby="nav-profile-tab">

                    </div>

                    <div class="tab-pane fade" id="computer-technology" role="tabpanel" aria-labelledby="nav-contact-tab">

                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success mr-2" />
                @Html.ActionLink("Back to List", "Index", "Exam", null, htmlAttributes: new { @class = "btn btn-light" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
