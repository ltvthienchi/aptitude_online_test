@model AptitudeTestOnline.Models.DetailsRegistrations

@{
    ViewBag.Title = "ScheduleEdit";
    IEnumerable<AptitudeTestOnline.Models.SchedulesModels> Schedules =
         ViewData["Schedules"] as IEnumerable<AptitudeTestOnline.Models.SchedulesModels>;
}

<h2>ScheduleEdit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>DetailsRegistrations</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.RegistrationID)
    @Html.HiddenFor(model => model.AccountID)
    @Html.HiddenFor(model => model.Mark)

    <div class="form-group row">
        <label for="TypeOfQuestion" class="control-label col-md-2">Shedule</label>
        <div class="col-sm-9">
            <select class="form-control" id="ScheduleID" name="ScheduleID">
                @foreach (var item in Schedules)
                {
                    if (item.ScheduleID == Model.ScheduleID)
                    {
                        <option value="@item.ScheduleID" selected>@item.DateOfTime</option>
                    }
                    <option value="@item.ScheduleID">@item.DateOfTime</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
