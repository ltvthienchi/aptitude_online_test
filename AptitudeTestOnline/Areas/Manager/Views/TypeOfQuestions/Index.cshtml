@model IEnumerable<AptitudeTestOnline.Models.TypeOfQuestionModel>

@{
    ViewBag.Title = "Index";
}
<h2 class="text-center text-primary">Type of Questions</h2>
<hr />

<div class="table-responsive">

    <table class="table table-bordered table-hover">
        <tr class="bg-default">
            <th>
                #
            </th>
            <th>
                Name
            </th>
        </tr>

        @{int i = 1;}
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <p>@i</p>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameTypeOfQuestion)
                </td>
            </tr>
            i++;
        }

    </table>
</div>
